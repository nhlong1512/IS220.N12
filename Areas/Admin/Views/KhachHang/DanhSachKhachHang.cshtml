                    window.location.replace("https://localhost:44309/admin/don-dat");
                    console.log("res", res.id, "isValid", res.isValid);
                },
                error: function (err) {
                    console.log("err --> ", err);
                    console.log("err ->>", err.err);
                },
            });
        })

        //Handle Xác nhận chuyển trạng thái đơn hàng sang đang giao
