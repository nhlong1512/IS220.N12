


@{
    ViewBag.Title = "MoriiCoffee";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    var nd = ViewBag.nd;
}

@model Model.EF.NguoiDung

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap" rel="stylesheet">

@section breadcrumb {
    <div class="container-fluid">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb my-0 ms-2">
                <li class="breadcrumb-item">
                    <!-- if breadcrumb is single-->
                    <span>Khách Hàng</span>
                </li>
                <li class="breadcrumb-item active"><span>Chi Tiết Khách Hàng</span></li>
            </ol>
        </nav>
    </div>
}


<script src="~/Scripts/ckfinder/ckfinder.js"></script>
<script src="~/Scripts/ckeditor/ckeditor.js"></script>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="w3-services py-5">
        <div class="container py-lg-4">
            <div class="form-horizontal">

                <div class="container">
                    <form>
                        <div class="profile-header">
                            <div class="profile-header-left">

                                <div class="img-header">
                                    @{
                                        if (string.IsNullOrEmpty(Model.Urlmage))
                                        {
                                            <label for="urlAnh" class="img-header-avt">
                                                <img id="avt-link" src="/Data/Files/noAvt2.png" style="width: 218px; height:218px; border-radius: 100%;" />
                                            </label>
                                            <div style="display:none" class="img-header-avt">
                                                <div class="input-group mb-3" @*onclick="BrowserSever()"*@ style="cursor: pointer;">
                                                    <span class="input-group-text" id="basic-addon3">Upload</span>
                                                    <input class="form-control" id="urlAnh" type="text" aria-describedby="basic-addon3" name="urlmage" value="@Model.Urlmage">
                                                </div>
                                            </div>
                                        }
                                        else
                                        {
                                            <label for="urlAnh" class="img-header-avt">
                                                <img id="avt-link" src="@Model.Urlmage" style="width: 218px; height:218px; border-radius: 100%;" />
                                            </label>
                                            <div style="display:none" class="img-header-avt">
                                                <div class="input-group mb-3" @*onclick="BrowserSever()"*@ style="cursor: pointer;">
                                                    <span class="input-group-text" id="basic-addon3">Upload</span>
                                                    <input class="form-control" id="urlAnh" type="text" aria-describedby="basic-addon3" name="urlmage" value="@Model.Urlmage">
                                                </div>
                                            </div>
                                        }
                                    }
                                </div>


                                <div>
                                    <h3 style="font-weight: 700; font-size: 40px; line-height: 49px;">Thông Tin Khách Hàng</h3>
                                    <p style="font-weight: 400; font-size: 18px; line-height: 22px;">Xem ảnh và thông tin của khách hàng.</p>
                                </div>
                            </div>
                        </div>
                        <div class="form-detail" style="margin-top: 80px; margin-bottom:60px;">

                            <div class="form-group row">
                                <label for="hoTenLabel" class="col-sm-2 col-form-label col-form-label-lg">Họ Tên</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control form-control-lg" id="hoTenLabel" value="@Model.HoTen" name="HoTen" readonly>
                                </div>
                            </div>
                            <hr class="style10">
                            <div class="form-group row">
                                <label for="emailLabel" class="col-sm-2 col-form-label col-form-label-lg">Email</label>
                                <div class="col-sm-10">
                                    <input type="email" class="form-control form-control-lg" id="hoTenLabel" value="@Model.Email" readonly>
                                </div>
                            </div>
                            <hr class="style10">
                            <div class="form-group row">
                                <label for="phoneLabel" class="col-sm-2 col-form-label col-form-label-lg">SĐT</label>
                                <div class="col-sm-10">
                                    <input type="number" class="form-control form-control-lg" id="phoneLabel" value="@Model.SDT" name="SDT" readonly>
                                </div>
                            </div>
                            <hr class="style10">
                            <div class="form-group row">
                                <label for="genderLabel" class="col-sm-2 col-form-label col-form-label-lg">Giới Tính</label>
                                <div class="col-sm-10">
                                    @Html.RadioButtonFor(model => model.GioiTinh, true)
                                    <label class="form-check-label" for="inlineRadio1">Nam</label>

                                    @Html.RadioButtonFor(model => model.GioiTinh, false)
                                    <label class="form-check-label" for="inlineRadio2">Nữ</label>
                                </div>
                            </div>
                            <hr class="style10">
                            <div class="form-group row">
                                <label for="birthLabel" class="col-sm-2 col-form-label col-form-label-lg">Ngày Sinh</label>
                                <div class="col-sm-10">
                                    <input type="date" class="form-control form-control-lg" id="birthLabel" name="NgSinh" value="@string.Format("{0:yyyy-MM-dd}", Model.NgSinh)" readonly />
                                </div>
                            </div>
                        </div>
                    </form>
                    <div style="display: flex; justify-content: flex-end; align-items: center; margin-top: 32px; text-decoration: none; padding-right:12px;">
                        <a href="~/admin/khach-hang" style="font-weight: 500; font-size: 16px; line-height: 20px; color: #146d4d; text-decoration:none;">
                            Danh Sách Khách Hàng
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

