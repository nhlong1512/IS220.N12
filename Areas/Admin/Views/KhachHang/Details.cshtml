<script>
    //Handle thêm CKEDITOR
    CKEDITOR.replace("ckeditor");

    //Handle thêm CKFINDER
    function BrowserSever() {
        var finder = new CKFinder();
        finder.selectActionFunction = GanUrl;
        finder.popup();
    }

    function GanUrl(url) {
        console.log(url);
        localStorage.urlAvt = url;
        //history.go(0);
        $("#avt-link").attr("src", localStorage.getItem('urlAvt'));
        $("#urlAnh").val(url);
    }

</script>