@section breadcrumb {
    <div class="container-fluid">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb my-0 ms-2">
                <li class="breadcrumb-item">
                    <!-- if breadcrumb is single-->
                    <span>Đơn Đặt</span>
                </li>
                <li class="breadcrumb-item active"><span>Chi Tiết Đơn Đặt</span></li>
            </ol>
        </nav>
    </div>
}


<div class="w3-services py-5">
    <div class="container" style="padding:24px 0;">
        <div class="form-horizontal">
            <div class="row" style="margin-bottom:60px;">
                <div class="col-sm-12">
                    <h3 style="font-weight: 700; font-size: 40px; line-height: 49px; margin-bottom:20px;">Chi Tiết Đơn Đặt</h3>
                </div>
                <div class="col-sm-8">
                    <div>
                        <div class="row wrap-deltail-order">
                            <div class="col-sm-5" style="padding: 0;">
                                <p class="pDonDat" style="margin-bottom: 12px;">
                                    Đơn Đặt: &nbsp;
                                    <span style="font-weight: 600;">
                                        #@dh.ID
                                    </span>
                                </p>
                                <p class="pDonDat" style="margin-bottom: 12px;">
                                    Ngày Mua: &nbsp;
                                    <span style="font-weight: 600;">
                                        @hd.CreatedDate
                                    </span>
                                </p>
                                <p class="pDonDat" style="margin-bottom: 12px;">
                                    Thanh Toán: &nbsp;
                                    <span style="font-weight: 600;">
                                        @dh.PTTT
                                    </span>
                                </p>
                                @if (dh.TTDH == "Đã Giao")
                                {
                                    <a>
                                        <button class="finishedButton">
                                            @dh.TTDH
                                        </button>
                                    </a>
                                }
                                else if (dh.TTDH == "Chờ Xác Nhận")
                                {
                                    <a>
                                        <button class="finishedButton" style="background-color: #1976D2;">
                                            @dh.TTDH
                                        </button>
                                    </a>
                                }
                                else if (dh.TTDH == "Đang Giao")
                                {
                                    <a>
                                        <button class="finishedButton" style="background-color: #FFC107;">
                                            @dh.TTDH
                                        </button>
                                    </a>
                                }
                                else
                                {
                                    <a>
                                        <button class="finishedButton" style="background-color: #FF0000;">
                                            @dh.TTDH
                                        </button>
                                    </a>
                                }



                            </div>
                            <div class="col-sm-7" style="padding: 0;">
                                <p class="pDonDat" style="margin-bottom: 12px;">
                                    Họ Tên: &nbsp;
                                    <span style="font-weight: 600;">
                                        @dh.HoTen
                                    </span>
                                </p>
                                <p class="pDonDat" style="margin-bottom: 12px;">
                                    SĐT: &nbsp;
                                    <span style="font-weight: 600;">
                                        @dh.SDT
                                    </span>
                                </p>
                                <p class="pDonDat" style="margin-bottom: 12px;">
                                    Địa Chỉ: &nbsp;
                                    <span style="font-weight: 600;">
                                        @dh.DiaChiNhanHang
                                    </span>
                                </p>
                            </div>
                        </div>

                        <hr class="style-10" />
                        <table class="table table-borderless">
                            <thead>
                                <tr>
                                    <th scope="col" style="font-weight: 700; font-size: 15px; line-height: 18px; color: #ABABAB;">Sản Phẩm</th>
                                    <th scope="col" style="text-align: center; font-weight: 700; font-size: 15px; line-height: 18px; color: #ABABAB;">Số Lượng</th>
                                    <th scope="col" style="text-align: center; font-weight: 700; font-size: 15px; line-height: 18px; color: #ABABAB;">Số Tiền</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in listCTHD)
                                {

                                    var sp = listCTSP[0];
                                    //Get Ra Chi tiết sản phẩm ứng với các sản phẩm trong chi tiết đơn hàng
                                    foreach (var it in listCTSP)
                                    {
                                        if (it.ID == item.MaSP)
                                        {
                                            sp = it;
                                            break;
                                        }
                                    }
                                    <tr>
                                        <th scope="row" style="display: flex; padding: 0; margin:30px 0 0 0;">
                                            <div class="img-product-wrap">
                                                <img class="img-product" src="@sp.UrlImage" />
                                            </div>
                                            <div class="product-details">
                                                <div>
                                                    <h3 class="product-title" style="margin:0;">
                                                        @sp.TenSanPham
                                                    </h3>
                                                    <p class="product-note" style="margin-bottom: 0">
                                                        Size: @item.Size
                                                    </p>
                                                    <p class="product-note" style="margin:0;">
                                                        @item.Topping
                                                    </p>

                                                </div>
                                                <p class="product-price" style="margin:0;">
                                                    @{
                                                        var a = item.Gia;
                                                        a = a / 1000;
                                                    }
                                                    @a.000 đ
                                                </p>
                                            </div>
                                        </th>
                                        <td>
                                            <div style="display:flex; flex-direction:row; justify-content:center; align-items:center;">
                                                <p class="pDonDat" style="margin:0;">@item.SoLuong</p>
                                            </div>

                                        </td>
                                        <td>
                                            <p class="total-price" style="margin:0;">
                                                @{
                                                    var b = item.ThanhTien;
                                                    b = b / 1000;
                                                }
                                                @b.000 đ

                                            </p>
                                        </td>
                                    </tr>
                                }


                            </tbody>
                        </table>
                    </div>

                </div>


                <div class="col-sm-4">
                    <div id="wrap-order-summary">
                        <h3 class="order-summary-title" style="color: #146d4d;">@dh.TTDH</h3>
                        <hr class="style-10" />
                        <div style="margin-bottom: 100px;">
                            <div class="wrap-sub-total">
                                <p class="sub-total">TỔNG TIỀN HÀNG</p>
                                <p class="sub-total" style="font-weight:600;">
                                    @{
                                        var c = hd.TongTien - 30000;
                                        c = c / 1000;
                                    }
                                    @c.000 đ
                                </p>
                            </div>
                            <div class="wrap-giamgia">
                                <p class="sub-total">GIẢM GIÁ</p>
                                <p class="sub-total" style="font-weight:600;">__</p>
                            </div>
                            <div class="wrap-phivanchuyen">
                                <p class="sub-total">PHÍ VẬN CHUYỂN</p>
                                <p class="sub-total" style="font-weight:600;">30.000 đ</p>
                            </div>
                        </div>

                        <hr class="style-10" />
                        <div>
                            <div class="wrap-estimated-total">
                                <p class="sub-total">TỔNG SỐ TIỀN </p>
                                <p class="sub-total" style="color:#146d4d; font-weight: 600;">
                                    @{
                                        var d = hd.TongTien;
                                        d = d / 1000;
                                    }
                                    @d.000 đ
                                </p>
                            </div>
                        </div>
                    </div>
                    @if (dh.TTDH == "Chờ Xác Nhận")
                    {
                        <div style="display: flex; justify-content:space-between; align-items: center; margin-top: 32px;">

                            <p class="huyDonHangButton" data-id="@dh.ID" id="huyDonHangButton_@dh.ID" data-toggle="modal" data-target="#exampleModal" style=" font-weight: 500; font-size: 16px; line-height: 20px; color: #146d4d; cursor:pointer; margin-bottom:0;">
                                Hủy Đơn Hàng
                            </p>
                            <p class="dangGiaoButton" data-id="@dh.ID" id="dangGiaoButton_@dh.ID" data-toggle="modal" data-target="#exampleModal" style=" font-weight: 500; font-size: 16px; line-height: 20px; color: #146d4d; cursor:pointer; margin-bottom: 0;">
                                Đang Giao
                            </p>

                            <a href="~/admin/don-dat" style="font-weight: 500; font-size: 16px; line-height: 20px; color: #146d4d; text-decoration: none;">
                                Danh Sách Đơn Đặt
                            </a>
                        </div>

                    }

                    else if (dh.TTDH == "Đang Giao")
                    {
                        <div style="display: flex; justify-content:space-between; align-items: center; margin-top: 32px;">

                            <p class="huyDonHangButton" data-id="@dh.ID" id="huyDonHangButton_@dh.ID" data-toggle="modal" data-target="#exampleModal" style=" font-weight: 500; font-size: 16px; line-height: 20px; color: #146d4d; cursor:pointer; margin-bottom:0;">
                                Hủy Đơn Hàng
                            </p>
                            <p class="daNhanHangButton" data-id="@dh.ID" id="daNhanHangButton_@dh.ID" data-toggle="modal" data-target="#exampleModal" style=" font-weight: 500; font-size: 16px; line-height: 20px; color: #146d4d; cursor:pointer; margin-bottom:0;">
                                Đã Nhận Hàng
                            </p>
                            <a href="~/admin/don-dat" style="font-weight: 500; font-size: 16px; line-height: 20px; color: #146d4d; text-decoration: none;">
                                Danh Sách Đơn Đặt
                            </a>
                        </div>

                    }
                    else
                    {
                        <div style="display: flex; justify-content:flex-end; align-items: center; margin-top: 32px;">
                            <a href="~/admin/don-dat" style="font-weight: 500; font-size: 16px; line-height: 20px; color: #146d4d; text-decoration: none;">
                                Danh Sách Đơn Đặt
                            </a>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>



<!-- Modal Xác Nhận Hủy Đơn Hàng-->
<div class="modal fade huyDonHangModal" id="exampleModal_@dh.ID" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">
                    Xác Nhận Hủy Đơn Hàng
                    <strong>
                        #@dh.ID
                    </strong>
                </h5>
            </div>
            <div class="modal-body">
                Đơn Hàng Này Sẽ Được Chuyển Sang Trạng Thái Đã Hủy Và Sẽ Cập Nhật Vào CSDL Ngay Lập Tức. Bạn Có Muốn Xác Nhận Hủy Đơn Hàng?
            </div>
            <div class="modal-footer">
                <button id="closeButton_@dh.ID" data-id="@dh.ID" class="closeButton" style="background-color:#ABABAB; outline:none;" data-dismiss="modal">Đóng</button>
                <button class="xacNhanHuyButton" data-id="@dh.ID" id="xacNhanHuyButton_@dh.ID">Xác Nhận</button>
            </div>
        </div>
    </div>
</div>


<!-- Modal Xác Nhận Đã Nhận Hàng-->
<div class="modal fade daNhanHangModal" id="daNhanHang_@dh.ID" tabindex="-1" role="dialog" aria-labelledby="daNhanHangLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="daNhanHangLabel">
                    Xác Nhận Đã Nhận Hàng
                    <strong>
                        #@dh.ID
