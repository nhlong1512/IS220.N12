
@model PagedList.IPagedList<Model.EF.ChiTietSanPham>
@using PagedList.Mvc;

@section breadcrumb {
    <div class="container-fluid">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb my-0 ms-2">
                <li class="breadcrumb-item">
                    <!-- if breadcrumb is single-->
                    <span>Sản phẩm</span>
                </li>
                <li class="breadcrumb-item active"><span>Danh sách Sản phẩm</span></li>
            </ol>
        </nav>
    </div>
}

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap" rel="stylesheet">
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>

@{
    ViewBag.Title = "MoriiCoffee";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    var ctsps = ViewBag.ctsps;
    var sps = ViewBag.sps;
}
<div class="w3-services py-5">
    <div class="container">
        <div class="form-horizontal">
            <h3 style="font-weight: 700; font-size: 40px; line-height: 49px; margin-bottom:60px;">Danh Sách Sản Phẩm</h3>
            <div class="row">
                <div class="col-sm-12">
                    <div style="">
                        <hr class="style-10" />
                        <table class="table table-borderless">
                            <thead>
                                <tr>
                                    <th scope="col" style="font-weight: 700; font-size: 15px; line-height: 18px; color: #ABABAB; text-transform: uppercase;">Sản Phẩm</th>
                                    <th scope="col" style="text-align: center; font-weight: 700; font-size: 15px; line-height: 18px; color: #ABABAB; text-transform: uppercase;">Phân Loại</th>
                                    <th scope="col" style="text-align: center; font-weight: 700; font-size: 15px; line-height: 18px; color: #ABABAB; text-transform: uppercase;">Ngày Đăng</th>
                                    <th scope="col" style="text-align: center; font-weight: 700; font-size: 15px; line-height: 18px; color: #ABABAB; text-transform: uppercase;">
                                        Trạng Thái
                                    </th>
                                    <th scope="col" style="text-align: center; font-weight: 700; font-size: 15px; line-height: 18px; color: #ABABAB; text-transform: uppercase;">Giá</th>
                                    <th scope="col" style="text-align: center; font-weight: 700; font-size: 15px; line-height: 18px; color: #ABABAB; text-transform: uppercase;">Thao Tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in ctsps)
                                {
                                    <tr>
                                        <th scope="row" style="display: flex; padding: 0; margin:30px 0 0 0;">
                                            <div class="img-product-wrap">
                                                <img class="img-product" src="@item.UrlImage" />
                                            </div>
                                            <div class="product-details">
                                                <div>
                                                    <h3 class="product-title">
                                                        @item.TenSanPham
                                                    </h3>
                                                    <style>
                                                        .product-desc {
                                                            overflow: hidden;
                                                            display: -webkit-box;
                                                            -webkit-line-clamp: 2;
                                                            -webkit-box-orient: vertical;
                                                            max-width:400px;
                                                        }
                                                    </style>
                                                </div>
                                                    <p class="product-desc">@item.MoTaSanPham</p>
                                            </div>
                                        </th>
                                        <td>
                                            <div style="display:flex; flex-direction:row; justify-content:center; align-items:center;">
                                                @foreach (var it in sps)
                                                {
                                                    if (it.ID == item.MaPhanLoai)
                                                    {
                                                        <p class="phanLoai ngayDang">@it.PhanLoai</p>
                                                    }
                                                }
                                            </div>

                                        </td>
                                        <td>
                                            <p class="ngayDang">
                                                @item.CreatedDate
                                            </p>
                                        </td>
                                        <td>
                                            
                                            @if (item.Status == true)
                                            {


                                                <p class="trangThai ngayDang">Đang Mở Bán</p>
                                            }
                                            else
                                            {
                                                <p class="trangThai ngayDang">Chưa Mở Bán</p>
                                            }
                                        </td>
                                        <td>
                                            <p class="total-price">
                                                @{ 
                                                    var a = item.Gia;
                                                    a = a / 1000;
                                                }
                                                @a.000 đ
                                            </p>
                                        </td>
                                        <td>
                                            <a class="button-delete" style="display:flex; justify-content:center;">
                                                <img src="~/Data/Files/deleteIcon.png" />
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>
}

<script>
    $(document).ready(function () {
        $(".button-quantity-increase").on('click',
            function handleClickIncreaseQty(e) {
                e.preventDefault();
                var id = $(this).data("id");
                var size = $(this).data("size");
                var topping = $(this).data("topping");
                var gia = $(this).data("gia");
                console.log(id, size, topping, gia);
                $.ajax({
                    type: "POST",
                    url: "/GioHang/IncreaseQtyJson",
                    data: {
                        id: id,
                        size: size,
                        topping: topping,
                        gia: gia
                    },
                    dataType: "json",
                    success: function (res) {
                        console.log("NguyenHuuLong --> ", res.msg);
                        console.log("NguyenHuuLong --> err", res.err);
                        console.log(res.id, res.size, res.gia, res.topping);

                        window.location.replace("https://localhost:44309/gio-hang");
                    },
                    error: function (err) {
                        console.log("err --> ", err);
                        console.log("err ->>", err.err);
                    },
                });
            }
        )

        $('.button-quantity-decrease').on('click',
            function handleClickIncreaseQty(e) {
                e.preventDefault();
                var id = $(this).data("id");
                var size = $(this).data("size");
                var topping = $(this).data("topping");
                var gia = $(this).data("gia");
                var qty = $(this).data("qty")
                if (qty > 1) {
                    $.ajax({
                        type: "POST",
                        url: "/GioHang/DecreaseQtyJson",
                        data: {
                            id: id,
                            size: size,
                            topping: topping,
                            gia: gia
                        },
                        dataType: "json",
                        success: function (res) {

                            window.location.replace("https://localhost:44309/gio-hang");
                        },
                        error: function (err) {
                            console.log("err --> ", err);
                            console.log("err ->>", err.err);
                        },
                    });
                }
            }
        )


        $('.button-delete').on('click',
            function handleClickIncreaseQty(e) {
                e.preventDefault();
                var id = $(this).data("id");
                var size = $(this).data("size");
                var topping = $(this).data("topping");
                var gia = $(this).data("gia");
                var qty = $(this).data("qty")

                $.ajax({
                    type: "POST",
                    url: "/GioHang/DeleteItemJson",
                    data: {
                        id: id,
                        size: size,
                        topping: topping,
                        gia: gia
                    },
                    dataType: "json",
                    success: function (res) {
                        window.location.replace("https://localhost:44309/gio-hang");
                    },
                    error: function (err) {
                        console.log("err --> ", err);
                        console.log("err ->>", err.err);
                    },
                });
            }
        )

    });
</script>
