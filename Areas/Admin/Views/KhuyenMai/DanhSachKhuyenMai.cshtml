


@section breadcrumb {
    <div class="container-fluid">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb my-0 ms-2">
                <li class="breadcrumb-item">
                    <!-- if breadcrumb is single-->
                    <span>Khuyến Mãi</span>
                </li>
                <li class="breadcrumb-item active"><span>Danh Sách Khuyến Mãi</span></li>
            </ol>
        </nav>
    </div>
}


@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    var kms = ViewBag.kms;
}

<script src="~/Scripts/ckfinder/ckfinder.js"></script>
<script src="~/Scripts/ckeditor/ckeditor.js"></script>


<div class="w3-services py-5" style="margin-bottom:40px;">
    <div class="container">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="form-horizontal">
                <h3 style="font-weight: 700; font-size: 40px; line-height: 49px; margin-bottom:30px;">Khuyến Mãi</h3>
                <div class="form-detail" style="margin-top: 80px;">
                    <div class="form-group row">
                        <div class="message-success" style="color: #155724 !important; font-size: 20px; padding: 0;" role="alert"></div>
                    </div>
                    <div class="form-group row">
                        <div class="message-error" style="color: #dc3545 !important; font-size: 20px; padding: 0;" role="alert"></div>
                    </div>
                    <div class="form-group row">
                        <label for="loaiSanPhamLabel" class="col-sm-3 col-form-label col-form-label-lg" style=" padding-right: 0; padding-left: 0;">Khuyến Mãi Đang Áp Dụng</label>
                        <div class="col-sm-9">
                            <select class="form-select form-select-lg" aria-label="Default select example" style="padding:8px 16px;">
                                @{
                                    foreach (var km in kms)
                                    {
                                        if (km.Status == true)
                                        {
                                            <option selected class="selectedPhanLoai" value="@km.ID">@km.TenKM</option>
                                        }
                                        else
                                        {
                                            <option class="selectedPhanLoai" value="@km.ID">@km.TenKM</option>
                                        }
                                    }
                                }
                                }
                            </select>
                        </div>
                    </div>

                    <div style="text-decoration: none; margin-bottom: 80px; margin-top: 40px; display: flex; justify-content: end; align-items: center;">
                        <button type="submit" class="apDungButton">
                            Áp Dụng
                        </button>

                    </div>

                    <hr class="style10" style="margin-bottom:80px;">



                    <h3 style="font-weight: 700; font-size: 40px; line-height: 49px; margin-bottom:80px; ">Thêm Mới Khuyến Mãi</h3>
                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label col-form-label-lg" style="padding-right:0; padding-left:0;" for="tieude">Tên Khuyến Mãi</label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control form-control-lg tenKhuyenMai" name="TenSanPham" placeholder="Tên Khuyến Mãi">
                        </div>
                    </div>
                    <hr class="style10">

                    <div class="form-group row">
                        <label class="col-sm-3 col-form-label col-form-label-lg" style="padding-right:0; padding-left:0;" for="gia">Giá</label>
                        <div class="col-sm-9">
                            <input class="form-control form-control-lg ptKhuyenMai" id="gia" type="number" name="Gia" placeholder="% Khuyến Mãi">
                        </div>
                    </div>

                    <div style="text-decoration: none; margin-bottom: 80px; margin-top: 40px; display: flex; justify-content: end; align-items: center;">
                        <button type="submit" class="themKhuyenMaiButton">
                            Thêm
                        </button>

                    </div>
                </div>
            </div>
        }
    </div>
</div>



