<script>
    $(document).ready(function () {
        $(".apDungButton").on('click',
            function handleClickApDungButton(e) {
                e.preventDefault();
                var id = $(this).data("id");
                var selectVal = +$('.form-select').val();
                console.log(id, selectVal);
                
                $.ajax({
                    type: "POST",
                    url: "/Admin/KhuyenMai/ApDungKhuyenMaiJson",
                    data: {
                        selectVal: selectVal,
                    },
                    dataType: "json",
                    success: function (res) {
                        if (res.isValid) {
                            $('.message-success').append("Áp dụng thành công. ");
                            //window.location.replace("https://localhost:44309/profile/don-dat");
                            topFunction();
                        }
                        else {
                            $(".message-error").append("Áp dụng thất bại. ");
                            topFunction();
                        }
                    },
                    error: function (err) {
                        console.log("err --> ", err);
                        console.log("err ->>", err.err);
                    },
                });
            }
        )

        $(".themKhuyenMaiButton").on('click',
            function handleClickThemKhuyenMaiButton(e) {
                e.preventDefault();
                var tenKhuyenMai = $(".tenKhuyenMai").val();
                var ptKhuyenMai = + $(".ptKhuyenMai").val();
                console.log(tenKhuyenMai, ptKhuyenMai);

                $.ajax({
                    type: "POST",
                    url: "/Admin/KhuyenMai/ThemKhuyenMaiJson",
                    data: {
                        tenKhuyenMai: tenKhuyenMai,
                        ptKhuyenMai: ptKhuyenMai,
                    },
                    dataType: "json",
                    success: function (res) {
                        if (res.isValid) {
                            $('.message-success').append("Thêm khuyến mãi thành công. ");
                            console.log(res.tenKhuyenMai, res.ptKhuyenMai, res.isValid)
                            //window.location.replace("https://localhost:44309/profile/don-dat");
                            topFunction();
                        }
                        else {
                            $(".message-error").append("Thêm khuyến mãi thất bại. ");
                            topFunction();
                        }
                    },
                    error: function (err) {
                        console.log("err --> ", err);
                        console.log("err ->>", err.err);
                    },
                });
            }
        )

        function topFunction() {
            document.body.scrollTop = 0;
            document.documentElement.scrollTop = 0;
        }
    })
</script>
