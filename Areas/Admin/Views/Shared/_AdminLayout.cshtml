<body>
    <div class="sidebar sidebar-dark sidebar-fixed" id="sidebar">
        <div class="sidebar-brand d-none d-md-flex">
            @*<svg class="sidebar-brand-full" width="118" height="46" alt="CoreUI Logo">
                    <use xlink:href="~/Assets/Admin/assets/brand/coreui.svg#full"></use>
                </svg>*@
            <img src="~/Assets/Images/LogoMorii1.png" width="118" height="46" />
            <svg class="sidebar-brand-narrow" width="46" height="46" alt="CoreUI Logo">
                <use xlink:href="~/Assets/Admin/assets/brand/coreui.svg#signet"></use>
            </svg>
        </div>
        <ul class="sidebar-nav" data-coreui="navigation" data-simplebar="">
            <li class="nav-item">
                <a class="nav-link" href="~/admin/dashboard">
                    <svg class="nav-icon">
                        <use xlink:href="~/Assets/Admin/vendors/core-ui/icons/svg/free.svg#cil-speedometer"></use>
                    </svg> Trang Chủ<span class="badge badge-sm bg-info ms-auto"></span>
                </a>
            </li>
            <li class="nav-group">
                <a class="nav-link nav-group-toggle" href="~/Admin/san-pham">
                    <svg class="nav-icon">
                        <use xlink:href="~/Assets/Admin/vendors/core-ui/icons/svg/free.svg#cil-mug"></use>
                    </svg> Sản Phẩm<span class="badge badge-sm bg-info ms-auto"></span>
                </a>
                <ul class="nav-group-items">
                    <li class="nav-item"><a class="nav-link" href="~/Admin/san-pham"><span class="nav-icon"></span> Danh Sách Sản Phẩm</a></li>
                    @if (nd.Role == "ADMIN")
                    {
                        <li class="nav-item"><a class="nav-link" href="~/Admin/san-pham/create"><span class="nav-icon"></span> Thêm Sản Phẩm</a></li>
                    }
                </ul>
            </li>
            <li class="nav-group">
                <a class="nav-link nav-group-toggle" href="~/Admin/Blog">
                    <svg class="nav-icon">
                        <use xlink:href="~/Assets/Admin/vendors/core-ui/icons/svg/free.svg#cil-newspaper"></use>
                    </svg> Blog<span class="badge badge-sm bg-info ms-auto"></span>
                </a>
                <ul class="nav-group-items">
                    <li class="nav-item"><a class="nav-link" href="~/Admin/Blog"><span class="nav-icon"></span> Danh Sách Blog</a></li>
                    <li class="nav-item"><a class="nav-link" href="~/Admin/Blog/Create"><span class="nav-icon"></span> Thêm Blog</a></li>
                </ul>
            </li>
            <li class="nav-group">
                <a class="nav-link nav-group-toggle" href="Admin/Blog">
                    <svg class="nav-icon">
                        <use xlink:href="~/Assets/Admin/vendors/core-ui/icons/svg/free.svg#cil-user"></use>
                    </svg> Khách Hàng<span class="badge badge-sm bg-info ms-auto"></span>
                </a>
                <ul class="nav-group-items">
                    <li class="nav-item"><a class="nav-link" href="~/Admin/khach-hang"><span class="nav-icon"></span> Danh Sách Khách Hàng</a></li>
                    <li class="nav-item"><a class="nav-link" href="~/Admin/khach-hang/them-khach-hang"><span class="nav-icon"></span> Thêm Khách Hàng</a></li>
                </ul>
            </li>
            @if (nd.Role == "ADMIN")
            {
                <li class="nav-group">
                    <a class="nav-link nav-group-toggle" href="/Admin/nhan-vien">
                        <svg class="nav-icon">
                            <use xlink:href="~/Assets/Admin/vendors/core-ui/icons/svg/free.svg#cil-people"></use>
                        </svg> Nhân Viên<span class="badge badge-sm bg-info ms-auto"></span>
                    </a>
                    <ul class="nav-group-items">
                        <li class="nav-item"><a class="nav-link" href="~/Admin/nhan-vien"><span class="nav-icon"></span> Danh Sách Nhân Viên</a></li>
                        <li class="nav-item"><a class="nav-link" href="~/Admin/nhan-vien/them-nhan-vien"><span class="nav-icon"></span> Thêm Nhân Viên</a></li>
                    </ul>
                </li>

            }
            <li class="nav-group">
                <a class="nav-link nav-group-toggle" href="/admin/hoa-don">
                    <svg class="nav-icon">
                        <use xlink:href="~/Assets/Admin/vendors/core-ui/icons/svg/free.svg#cil-cash"></use>
                    </svg> Hóa Đơn<span class="badge badge-sm bg-info ms-auto"></span>
                </a>
                <ul class="nav-group-items">
                    <li class="nav-item"><a class="nav-link" href="/admin/hoa-don"><span class="nav-icon"></span> Danh Sách Hóa Đơn</a></li>
                    <li class="nav-item"><a class="nav-link" href="/thuc-don"><span class="nav-icon"></span> Thêm Hóa Đơn</a></li>
                </ul>
            </li>

            @if (nd.Role == "ADMIN")
            {
                <li class="nav-item">
                    <a class="nav-link" href="~/admin/khuyen-mai">
                        <svg class="nav-icon" xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-ticket-perforated" viewBox="0 0 16 16">
                            <path d="M4 4.85v.9h1v-.9H4Zm7 0v.9h1v-.9h-1Zm-7 1.8v.9h1v-.9H4Zm7 0v.9h1v-.9h-1Zm-7 1.8v.9h1v-.9H4Zm7 0v.9h1v-.9h-1Zm-7 1.8v.9h1v-.9H4Zm7 0v.9h1v-.9h-1Z" />
                            <path d="M1.5 3A1.5 1.5 0 0 0 0 4.5V6a.5.5 0 0 0 .5.5 1.5 1.5 0 1 1 0 3 .5.5 0 0 0-.5.5v1.5A1.5 1.5 0 0 0 1.5 13h13a1.5 1.5 0 0 0 1.5-1.5V10a.5.5 0 0 0-.5-.5 1.5 1.5 0 0 1 0-3A.5.5 0 0 0 16 6V4.5A1.5 1.5 0 0 0 14.5 3h-13ZM1 4.5a.5.5 0 0 1 .5-.5h13a.5.5 0 0 1 .5.5v1.05a2.5 2.5 0 0 0 0 4.9v1.05a.5.5 0 0 1-.5.5h-13a.5.5 0 0 1-.5-.5v-1.05a2.5 2.5 0 0 0 0-4.9V4.5Z" />
                        </svg>
                        Khuyến Mãi<span class="badge badge-sm bg-info ms-auto"></span>
                    </a>
                </li>
            }
            <li class="nav-item">
                <a class="nav-link" href="~/admin/don-dat">
                    <svg class="nav-icon">
                        <use xlink:href="~/Assets/Admin/vendors/core-ui/icons/svg/free.svg#cil-cart"></use>
                    </svg> Đơn Đặt<span class="badge badge-sm bg-info ms-auto"></span>
                </a>
            </li>

            <li class="nav-item">
                <a class="nav-link" href="~/">
                    <svg class="nav-icon">
                        <use xlink:href="~/Assets/Admin/vendors/core-ui/icons/svg/free.svg#cil-coffee"></use>
                    </svg> Morii <span class="badge badge-sm bg-info ms-auto"></span>
                </a>
            </li>
        </ul>
        <button class="sidebar-toggler" type="button" data-coreui-toggle="unfoldable"></button>
    </div>

    <div class="wrapper d-flex flex-column min-vh-100 bg-light">
        <header class="header header-sticky mb-4">
            <div class="container-fluid">

                <button class="header-toggler px-md-0 me-md-3" type="button" onclick="coreui.Sidebar.getInstance(document.querySelector('#sidebar')).toggle()">
                    <svg class="icon icon-lg">
                        <use xlink:href="~/Assets/Admin/vendors/core-ui/icons/svg/free.svg#cil-menu"></use>
                    </svg>
                </button><a class="header-brand d-md-none" href="#">
                    <svg width="118" height="46" alt="CoreUI Logo">
                        <use xlink:href="~/Assets/Admin/assets/brand/coreui.svg#full"></use>
                    </svg>
                </a>
                <ul class="header-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="~/admin">
                            <svg class="icon icon-lg">
                                <use xlink:href="~/Assets/Admin/vendors/core-ui/icons/svg/free.svg#cil-bell"></use>
                            </svg>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="~/admin">
                            <svg class="icon icon-lg">
                                <use xlink:href="~/Assets/Admin/vendors/core-ui/icons/svg/free.svg#cil-list-rich"></use>
                            </svg>
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="~/admin">
                            <svg class="icon icon-lg">
                                <use xlink:href="~/Assets/Admin/vendors/core-ui/icons/svg/free.svg#cil-envelope-open"></use>
                            </svg>
                        </a>
                    </li>
                </ul>
                <ul class="header-nav ms-3">
                    @{
                        if (session == null)
                        {
                            <li class="nav-item">
                                <a href="~/dang-nhap" class="btn btn-primary d-none d-lg-block btn-style mr-2">
                                    Đăng nhập
                                </a>
                            </li>
                        }
                        else
                        {
                            @*@RenderPage("_UserDropdown.cshtml")*@
                            <ul class="header-nav ms-3">
                                <li class="nav-item dropdown" style="margin-bottom: 6px; margin-top: 6px;">
                                    <a class="nav-link py-0" data-coreui-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false">
                                        @if (string.IsNullOrEmpty(nd.Urlmage))
                                        {
                                            <div class="avatar avatar-md">
                                                <img class="avatar-img" style="border-radius: 100%; width: 48px; height: 48px;"
                                                     src="/Data/Files/noAvt2.png" alt="user@email.com">
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="avatar avatar-md">
                                                <img class="avatar-img" style="border-radius: 100%; width:48px; height:48px;"
                                                     src="@nd.Urlmage" alt="user@email.com">
                                            </div>
                                        }


                                    </a>
                                    <div class="dropdown-menu dropdown-menu-end pt-0" style="margin: 20px 0;">
                                        <div class="dropdown-header bg-light py-2" style="border-top-left-radius: 6px; border-top-right-radius: 6px; margin: 0px;">
                                            <div class="fw-semibold" style="font-size:18px;">@nd.HoTen</div>
                                        </div>

                                        <a class="dropdown-item" href="~/admin/profile/chinh-sua/@nd.ID">
                                            <svg class="icon me-2">
                                                <use xlink:href="~/Assets/Admin/vendors/core-ui/icons/svg/free.svg#cil-user"></use>
                                            </svg> Tài Khoản Của Tôi
                                        </a>
                                        <a class="dropdown-item" href="~/admin/profile/doi-mat-khau/@nd.ID">
                                            <svg class="icon me-2">
                                                <use xlink:href="~/Assets/Admin/vendors/core-ui/icons/svg/free.svg#cil-lock-unlocked"></use>
                                            </svg> Đổi Mật Khẩu
                                        </a>
                                        <a class="dropdown-item" id="dangXuatID"
                                           href="/dang-xuat">
                                            <svg class="icon me-2">
                                                <use xlink:href="~/Assets/Admin/vendors/core-ui/icons/svg/free.svg#cil-account-logout"></use>
                                            </svg>  Đăng Xuất
                                        </a>
                                    </div>
                                </li>
                            </ul>

                        }

                    }
                </ul>
            </div>
            <div class="header-divider"></div>
            @RenderSection("breadcrumb", required: false)

        </header>
        @RenderBody()
    </div>

    <style>
        .sidebar-nav .nav-link {
            padding: 20px;
        }

        .dropdown-menu .dropdown-menu-end .pt-0 .show {
            margin: 0px;
            position: absolute;
            inset: 6px 0px auto auto !important;
            transform: translate3d(0px, 41.7778px, 0px);
        }
    </style>



    @RenderSection("footer", required: false)
    <!-- CoreUI and necessary plugins-->
    <script src="~/Assets/Admin/vendors/core-ui/coreui/js/coreui.bundle.min.js"></script>
    <script src="~/Assets/Admin/vendors/simplebar/js/simplebar.min.js"></script>
    <!-- Plugins and scripts required by this view-->
    <script src="~/Assets/Admin/vendors/chart.js/js/chart.min.js"></script>
    <script src="~/Assets/Admin/vendors/core-ui/chartjs/js/coreui-chartjs.js"></script>
    <script src="~/Assets/Admin/vendors/core-ui/utils/js/coreui-utils.js"></script>
    <script src="~/Assets/Admin/js/main.js"></script>

    @RenderSection("MoriiAdminJS", false)

</body>
</html>
