<!--Section Menu-->

<section class="popular-menu__area popular-menu__area--2 dark-bg position-relative pt-80 pb-80">
    <div class="container">
        <div class="row">
            <div class="col-xl-12 text-center">
                <div class="section-heading mb-60">
                    <h2 class="hny-title text-morii">
                        Thực Đơn
                    </h2>
                </div>
            </div>
        </div>
        <div class="row mt-none-30 justify-content-between">
            <div class="col-xl-12">
                <div class="pm-list-wrapper">
                    <div class="row">
                        @{
                            var i = 0;
                            foreach (var sp in ctsps)
                            {
                                ++i;
                                <a href="~/thuc-don/details/@sp.ID">
                                    <div class="col-xl-6 col-lg-6 col-md-6 l-item mt-30">
                                        <div class="popular-menu__list">
                                            <div class="thumb">
                                                <img src=@sp.UrlImage width="86" height="86" style="border-radius:100%" />
                                            </div>
                                            <div class="content">
                                                <h3 class="title border-effect">
                                                    <a href="~/thuc-don/details/@sp.ID">@sp.TenSanPham</a>
                                                </h3>
                                                <span class="price">
                                                    @{
                                                        var a = sp.Gia;
                                                        a = a / 1000;
                                                    }
                                                    @a.000 đ
                                                </span>
                                            </div>
                                        </div>
                                    </div>

                                </a>
                                if (i == 6)
                                {
                                    break;
                                }
                            }
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

</section>

<!-- /Morii Blog, Morii Chuyện -->
<section class="features-4">
    <div class="features4-block py-5">
        <div class="container py-lg-4">
            <div class="title-content text-center mb-lg-5 mt-4">
                <h3 class="hny-title text-morii">Morii Blog</h3>
                <p class="fea-para">Mỗi tách cà phê, mỗi câu chuyện</p>
            </div>
            <div class="row features4-grids text-left mt-lg-4">
                @{
                    var dem = 0;
                    foreach (var item in blogs)
                    {
                        if (dem == 6)
                        {
                            break;
                        }
                        dem++;
                        <a href="~/blog/details/@item.ID" style="cursor:pointer;">
                            <div class="col-xl-4 col-md-6 mb-20" style="cursor:pointer;">
                                <div class="blog-info">
                                    <a href="~/blog/details/@item.ID">
                                        <img class="img-fluid" src="@item.UrlImage" alt="@item.TieuDe" />
                                    </a>
                                    <div class="blog-content">
                                        <p class="date-post">@item.CreatedDate</p>
                                        <a href="~/blog/details/@item.ID">
                                            <h3 class="blog-content-title">
                                                @item.TieuDe
                                            </h3>

                                        </a>
                                        <a href="~/blog/details/@item.ID" style="cursor:pointer;">
                                            <p class="blog-content-detail">
                                                @item.MoTa
                                            </p>

                                        </a>
                                    </div>
                                </div>
                            </div>
                        </a>
                    }
                }

            </div>
        </div>
    </div>
</section>
