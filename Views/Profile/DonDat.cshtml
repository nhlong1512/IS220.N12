
@{
    ViewBag.Title = "MoriiCoffee";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
    var nd = ViewBag.ndd;
    var dathangs = ViewBag.dathangs;
    var hoadons = ViewBag.hoadons;
    decimal gia = 0;
}

@model Model.EF.NguoiDung

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap" rel="stylesheet">
<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>


<!-- about breadcrumb -->
<section class="w3l-about-breadcrumb position-relative text-center">
    <div class="breadcrumb-bg breadcrumb-bg-about py-sm-5 py-4">
        <div class="container py-lg-5 py-3">
            <h2 class="title text-morii">Tài Khoản Của Tôi</h2>
            <ul class="breadcrumbs-custom-path mt-2">
                <li><a href="Index">Đơn Đặt</a></li>
                <li class="active"><span class="fa fa-angle-double-right mx-2" aria-hidden="true"></span>Danh Sách Đơn Đặt</li>
            </ul>
        </div>
    </div>
</section>
<!-- //about breadcrumb -->


<div class="w3-services py-5">
    <div class="container" style="padding:24px 0;">
        <div class="form-horizontal">
            <div class="row">
                <div class="col-sm-12">
                    <div style="margin-right: 60px;">
                        <h3 style="font-weight: 700; font-size: 40px; line-height: 49px; margin-bottom:20px;">Đơn Đặt</h3>
                        <hr class="style-10" />
                        <table class="table table-borderless">
                            <thead>
                                <tr>
                                    <th scope="col" style="font-weight: 700; font-size: 15px; line-height: 18px; color: #ABABAB;">Mã Đơn Đặt</th>
                                    <th scope="col" style="font-weight: 700; font-size: 15px; line-height: 18px; color: #ABABAB;">Ngày Mua</th>
                                    <th scope="col" style="font-weight: 700; font-size: 15px; line-height: 18px; color: #ABABAB;">Số Tiền</th>
                                    <th scope="col" style="font-weight: 700; font-size: 15px; line-height: 18px; color: #ABABAB;">Trạng Thái</th>
                                    <th scope="col" style="font-weight: 700; font-size: 15px; line-height: 18px; color: #ABABAB;">Thanh Toán</th>
                                    <th scope="col" style="font-weight: 700; font-size: 15px; line-height: 18px; color: #ABABAB;"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in dathangs)
                                {
                                    <tr>
                                        <th>
                                            <p class="maDonDat">
                                                #@item.ID
                                            </p>
                                        </th>


                                        <td>
                                            <p class="pDonDat">
                                                @item.CreatedDate
                                            </p>
                                        </td>
                                        <td>
                                            @*Tìm giá của đơn đặt*@
                                            @foreach (var i in hoadons)
                                            {
                                                if (i.ID == item.MaHoaDon)
                                                {
                                                    gia = i.TongTien;
                                                }
                                            }
                                            <p class="pDonDat">
                                                @{
                                                    var a = gia;
                                                    a = a / 1000;
                                                }
                                                @a.000 đ
                                            </p>
                                        </td>
                                        <td>

                                            @if (item.TTDH == "Chờ Xác Nhận")
                                            {
                                                <p class="pDonDat waitingAcceptColor">
                                                    @item.TTDH
                                                </p>
                                            }
                                            else if (item.TTDH == "Đang Giao")
                                            {
                                                <p class="pDonDat inProgressColor">
                                                    @item.TTDH
                                                </p>
                                            }
                                            else if (item.TTDH == "Đã Hủy")
                                            {
                                                <p class="pDonDat cancelledColor">
                                                    @item.TTDH
                                                </p>
                                            }
                                            else
                                            {
                                                <p class="pDonDat activeColor">
                                                    @item.TTDH
                                                </p>
                                            }
                                        </td>
                                        <td>
                                            <p class="pDonDat">
                                                @item.PTTT
                                            </p>
                                        </td>
                                        <td>
                                            <a style="" class="optionsSelect" data-id="@item.ID" id="option_@item.ID">
                                                <img src="~/Data/Files/dots-option.png" />
                                                <div class="toggle-options-select" id="Toggle_@item.ID">
                                                    <div class="wrap-options">
                                                        @if (item.TTDH == "Chờ Xác Nhận")
                                                        {

                                                            <p class="huyDonHang">Hủy Đơn Hàng</p>
                                                        }
                                                        else if (item.TTDH == "Đang Giao")
                                                        {
                                                            <p class="daNhanHang">Đã Nhận Hàng</p>
                                                        }
                                                        else if (item.TTDH == "Đã Giao")
                                                        {

                                                        }
                                                        else
                                                        {

                                                        }
                                                        <p class="xemChiTiet" data-id="@item.ID">Xem Chi Tiết</p>

                                                    </div>
                                                </div>
                                            </a>

                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .huyDonHang {
        font-size: 14px;
        color: #FF0000;
        line-height: 20px;
        margin-bottom: 10px;
        font-weight: 600;
    }

    .daNhanHang {
        font-size: 14px;
        color: #009D34;
        line-height: 20px;
        margin-bottom: 10px;
        font-weight: 600;
    }

        .daNhanHang:hover {
            opacity: 0.5;
        }

    .huyDonHang:hover {
        opacity: 0.5;
    }

    .xemChiTiet {
        font-size: 14px;
        color: #146d4d;
        line-height: 20px;
    }

        .xemChiTiet:hover {
            opacity: 0.5;
        }

    .optionsSelect {
        position: relative;
    }

    .toggle-options-select {
        padding-top: 10px;
        padding-bottom: 10px;
        position: absolute;
        background-color: #eee;
        border-radius: 8px;
        color: white;
        font-size: 10px;
        font-weight: bold;
        display: flex;
        border: 1px solid #fff;
        justify-content: center;
        align-items: center;
        width: 130px;
        top: -175%;
        left: 140%;
        visibility: hidden;
        transition: all 0.02s ease;
    }

    .wrap-options {
        display: flex;
        flex-direction: column;
    }

    .maDonDat {
        font-weight: 600;
        font-size: 18px;
        line-height: 22px;
        color: #000;
    }

    .pDonDat {
        font-weight: 500;
        font-size: 18px;
        line-height: 22px;
        color: #000000;
    }

    .activeColor {
        color: #009D34 !important;
    }


    .cancelledColor {
        color: #FF0000 !important;
    }

    .inProgressColor {
        color: #FFC107 !important;
    }

    .waitingAcceptColor {
        color: #1976D2 !important;
    }

    #wrap-order-summary {
        padding: 24px;
    }

    .order-summary-title {
        font-weight: 600;
        font-size: 24px;
        line-height: 29px;
        margin-bottom: 14px;
    }

    .wrap-sub-total {
        display: flex;
        margin-top: 20px;
        justify-content: space-between;
        margin-bottom: 48px;
    }

    .wrap-giamgia {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .wrap-estimated-total {
        display: flex;
        justify-content: space-between;
    }

    .sub-total {
        font-weight: 500;
        font-size: 16px;
        line-height: 20px;
        color: #000;
    }

    .button-checkout {
        margin-top: 36px;
        border: none;
        background-color: #146d4d;
        border-radius: 15px;
        padding: 16px;
        width: 100%;
        font-style: normal;
        font-weight: 600;
        font-size: 18px;
        line-height: 22px;
        color: #FFFFFF;
    }

    #wrap-order-summary {
        background-color: #F5F5F6;
        border-radius: 15px;
    }

    .img-product {
        width: 100px;
        height: 100px;
        border-radius: 15px;
        margin-right: 20px;
    }

    .product-details {
        display: flex;
        justify-content: space-between;
        flex-direction: column;
    }

    .product-title {
        font-weight: 600;
        font-size: 20px;
        line-height: 26px;
    }

    .product-note {
        font-weight: 400;
        font-size: 16px;
        line-height: 20px;
        margin-bottom: 16px;
    }

    .product-price {
        font-style: normal;
        font-weight: 600;
        font-size: 16px;
        line-height: 20px;
        color: #146d4d;
    }

    .quantity-product {
        width: 50px;
        height: 33px;
        border: 2px solid #CFCFCF;
        text-align: center;
        margin: 0 13px;
    }

    input::-webkit-outer-spin-button,
    input::-webkit-inner-spin-button {
        -webkit-appearance: none;
        margin: 0;
    }

    .button-quantity {
        background-color: transparent;
        border: none;
        font-weight: 400;
        font-size: 36px;
        line-height: 36px;
        outline: none !important;
    }

    .total-price {
        font-weight: 600;
        font-size: 16px;
        line-height: 20px;
        text-align: center;
        color: #146d4d;
    }

    .img-header-avt:hover {
        cursor: pointer
    }

    .form-check-label {
        padding: 0.5rem 1rem;
        font-size: 1.25rem;
        line-height: 1.5;
    }

    .form-check-input {
        padding: 7px;
        width: 100%;
        height: 2em;
    }

    button, input, select, label, li {
        -webkit-appearance: button;
    }

    .form-group {
        margin: 30px 0 30px 0;
    }

    .profile-header {
        display: flex;
        justify-content: space-between;
    }

    .profile-header-left {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .img-header {
        margin-right: 50px;
    }

    .button-profile-save {
        display: flex;
        justify-content: center;
        align-items: center;
    }

        .button-profile-save > button {
            font-weight: 600;
            font-size: 18px;
            line-height: 22px;
            background-color: #146d4d;
            padding: 14px;
            text-align: center;
            color: #FFFFFF;
            border: none;
            border-radius: 8px;
        }



    hr.style10 {
        border-top: 0.5px dotted #E5E5E5;
        border-bottom: 1px dotted #fff;
    }

    .show {
        visibility: visible;
    }
</style>


<script>
    $(document).ready(function () {
        $('.optionsSelect').click(function (e) {
            var idToggle = $(this).data("id");
            console.log('rich', idToggle);
            var isHasClass = $("#Toggle_" + idToggle).hasClass("show");
            console.log("isHasClass", isHasClass);
            e.preventDefault();
            e.stopPropagation();
            console.log("Toggle_" + idToggle);
            $(".toggle-options-select").removeClass("show");
            if (isHasClass == false) {
                $("#Toggle_" + idToggle).addClass("show");
            } else {
                $("#Toggle_" + idToggle).removeClass("show");
            }

        })
        $(window).click(function () {
            $(".toggle-options-select").removeClass("show");
        })

        $('.xemChiTiet').click(function () {
            var idXemChiTiet = $(this).data("id");
            window.location.replace("https://localhost:44309/profile/chi-tiet-don-dat/" + idXemChiTiet);
        })

    });
</script>
