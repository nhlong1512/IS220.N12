
@model Model.EF.ChiTietSanPham
@{
    ViewBag.Title = "MoriiCoffee";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
    var nd = ViewBag.ndd;
}

<link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;600;700&display=swap" rel="stylesheet">


<!-- about breadcrumb -->
<section class="w3l-about-breadcrumb position-relative text-center">
    <div class="breadcrumb-bg breadcrumb-bg-about py-sm-5 py-4">
        <div class="container py-lg-5 py-3">
            <h2 class="title text-morii">Tài Khoản Của Tôi</h2>
            <ul class="breadcrumbs-custom-path mt-2">
                <li><a href="Index">Người Dùng</a></li>
                <li class="active"><span class="fa fa-angle-double-right mx-2" aria-hidden="true"></span> Tài Khoản Của Tôi </li>
            </ul>
        </div>
    </div>
</section>
<!-- //about breadcrumb -->



<div class="w3-services py-5">
    <div class="container py-lg-4">
        <div class="form-horizontal">

            <div class="container">
                <form>
                    <div class="profile-header">
                        <div class="profile-header-left">
                            <div class="img-header">
                                <img src="@nd.Urlmage" style="width: 218px; border-radius: 100%;" />
                            </div>
                            <div>
                                <h3 style="font-weight: 700; font-size: 40px; line-height: 49px;">Thông Tin Cá Nhân</h3>
                                <p style="font-weight: 400; font-size: 18px; line-height: 22px;">Cập nhật ảnh và thông tin cá nhân của bạn.</p>
                            </div>
                        </div>
                        <a class="button-profile-save">
                            <button>
                                Save
                            </button>
                        </a>

                    </div>
                    <div class="form-detail" style="margin-top: 80px;">
                        <div class="form-group row">
                            <label for="hoTenLabel" class="col-sm-2 col-form-label col-form-label-lg">Họ Tên</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control form-control-lg" id="hoTenLabel" value="@nd.HoTen">
                            </div>
                        </div>
                        <hr class="style10">
                        <div class="form-group row">
                            <label for="emailLabel" class="col-sm-2 col-form-label col-form-label-lg">Email</label>
                            <div class="col-sm-10">
                                <input type="email" class="form-control form-control-lg" id="hoTenLabel" placeholder="@nd.Email" readonly>
                            </div>
                        </div>
                        <hr class="style10">
                        <div class="form-group row">
                            <label for="phoneLabel" class="col-sm-2 col-form-label col-form-label-lg">SĐT</label>
                            <div class="col-sm-10">
                                <input type="number" class="form-control form-control-lg" id="phoneLabel" value="@nd.SDT">
                            </div>
                        </div>
                        <hr class="style10">
                        @{ 
                            if(nd.GioiTinh == null)
                            {
                                nd.GioiTinh = true;
                            }
                        }
                        <div class="form-group row">
                            <label for="genderLabel" class="col-sm-2 col-form-label col-form-label-lg">Giới Tính</label>
                            <div class="col-sm-10">
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" id="inlineRadio1" value="@nd.GioiTinh" name="GioiTinh" @(nd.GioiTinh ? "checked=\"checked\"" : "") />
                                    <label class="form-check-label" for="inlineRadio1">Nam</label>
                                </div>
                                <div class="form-check form-check-inline">
                                    <input class="form-check-input" type="radio" id="inlineRadio2" value="@nd.GioiTinh" name="GioiTinh" @(!nd.GioiTinh ? "checked=\"checked\"" : "")/>
                                    <label class="form-check-label" for="inlineRadio2">Nữ</label>
                                </div>
                            </div>
                        </div>
                        <hr class="style10">
                        <div class="form-group row">
                            <label for="birthLabel" class="col-sm-2 col-form-label col-form-label-lg">Ngày Sinh</label>
                            <div class="col-sm-10">
                                <input type="date" class="form-control form-control-lg" id="birthLabel" value="@nd.NgSinh">
                            </div>
                        </div>
                    </div>


            </div>


            </form>


        </div>
    </div>

</div>
</div>


<style>

    .form-check-label {
        padding: 0.5rem 1rem;
        font-size: 1.25rem;
        line-height: 1.5;
    }
    .form-check-input {
        padding: 7px;
        width: 100%;
        height: 2em;
    }
    button, input, select, label, li {
        -webkit-appearance: button;
    }

    .form-group {
        margin: 30px 0 30px 0;
    }

    .profile-header {
        display: flex;
        justify-content: space-between;
    }

    .profile-header-left {
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .img-header {
        margin-right: 50px;
    }

    .button-profile-save {
        display: flex;
        justify-content: center;
        align-items: center;
    }

        .button-profile-save > button {
            font-weight: 600;
            font-size: 18px;
            line-height: 22px;
            background-color: #146d4d;
            padding: 14px;
            text-align: center;
            color: #FFFFFF;
            border: none;
            border-radius: 8px;
        }


    .product {
        display: flex;
        /*flex-direction:column;*/
        gap: 30px;
        padding-bottom: 20px;
        /*border-bottom: 0.5px solid #ccc !important;*/
    }

    .imgProduct {
        display: flex;
    }

    .contentProduct {
        display: flex;
        flex-direction: column;
    }

    .moTaDiv {
        margin: 20px 0;
    }

    .moTa {
        font-size: 30px;
        font-weight: 500;
        margin-bottom: 16px;
    }

    .moTaP {
        font-size: 18px;
        font-weight: 400;
        margin-bottom: 20px;
    }

    hr.style10 {
        border-top: 0.5px dotted #E5E5E5;
        border-bottom: 1px dotted #fff;
    }

    .w3-services-grids {
        align-items: initial;
    }

    .splienquan-h4 {
        font-size: 20px !important;
        margin: 10px 0 0 0 !important;
        line-height: 27px !important;
        font-weight: 500 !important;
        color: #146d4d !important;
    }

    .splienquan-p {
        font-size: 18px !important;
    }
</style>




