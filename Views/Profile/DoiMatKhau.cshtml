                            <div class="form-group row">
                                <label for="matKhauCuLabel" class="col-sm-3 col-form-label col-form-label-lg">Mật Khẩu Cũ</label>
                                <div class="col-sm-9">
                                    <input type="password" class="form-control form-control-lg" id="matKhauCuLabel" placeholder="••••••••••••" name="">
                                </div>
                            </div>
                            <hr class="style10">
                            <div class="form-group row">
                                <label for="matKhauMoiLabel" class="col-sm-3 col-form-label col-form-label-lg">Mật Khẩu Mới</label>
                                <div class="col-sm-9">
                                    <input type="password" class="form-control form-control-lg" id="matKhauMoiLabel" placeholder="••••••••••••" name="">
                                </div>
                            </div>
                            <hr class="style10">
                            <div class="form-group row">
                                <label for="xacNhanMatKhauMoiLabel" class="col-sm-3 col-form-label col-form-label-lg">Xác Nhận Mật Khẩu Mới</label>
                                <div class="col-sm-9">
                                    <input type="password" class="form-control form-control-lg" id="xacNhanMatKhauMoiLabel" placeholder="••••••••••••" name="">
                                </div>
                            </div>

                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
}

