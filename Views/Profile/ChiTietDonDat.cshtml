
@{
    ViewBag.Title = "MoriiCoffee";
    Layout = "~/Views/Shared/_LayoutPage1.cshtml";
    var hd = ViewBag.hd;
    var dh = ViewBag.dh;
    var listCTHD = ViewBag.listCTHD;
    var listCTSP = ViewBag.listCTSP;
}

@model Model.EF.NguoiDung

