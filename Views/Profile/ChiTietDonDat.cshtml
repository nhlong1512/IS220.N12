        <script>
            $(document).ready(function () {
                $("#doiMatKhauButton").on('click',
                    function DoiMatKhau(e) {
                        e.preventDefault();
                        //Clear $(".message-error") and $('.message-success')
                        $(".message-error").empty();
                        $('.message-success').empty();

                        var id = $(this).data('id');

                        var oldPassword = $('#matKhauCuLabel').val();
                        var newPassword = $('#matKhauMoiLabel').val();
                        var confirmNewPassword = $('#xacNhanMatKhauMoiLabel').val();

                        console.log('Old Password ->>', oldPassword);
                        console.log('New Password ->>', newPassword);
                        console.log('Confirm New Password ->>', confirmNewPassword);

                        $.ajax({
                            type: "POST",
                            url: "/Profile/DoiMatKhau",
                            data: {
                                id: id,
                                oldPassword: oldPassword,
                                newPassword: newPassword,
                                confirmNewPassword: confirmNewPassword
                            },
                            dataType: "json",
                            success: function (res) {
                                console.log("NguyenHuuLong --> ", res.msg);
                                console.log("NguyenHuuLong --> err", res.err);
                                if (res.isValid) {
                                    $('.message-success').append("Thay đổi mật khẩu thành công. ");
                                }
                                if (res.err) {
                                    $(".message-error").append(res.err);
                                }
                                //window.location.replace("https://localhost:44309/");
                            },
                            error: function (err) {
                                console.log("err --> ", err);
                                console.log("err ->>", err.err);
                            },
                        });

                    }
                )
            });
        </script>



