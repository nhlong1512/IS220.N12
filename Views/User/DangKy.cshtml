@model Model.EF.NguoiDung
<link rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" />
<link href="~/Assets/Login_Register/css/dangky.css" rel="stylesheet" />
@{
    ViewBag.Title = "DangKy";
    Layout = "~/Views/Shared/_LoginRegister.cshtml";
}

<!--/start-login-two-->
<div class="container" id="container">
    <div class="overlay-container">
        <div class="overlay">
            <div class="overlay-panel overlay-right">
                <h1 class="welcom">Morii xin chào</h1>
                <p class="welcom">Tạo tài khoản và bắt đầu cùng với Morii nào!</p>
                <p class="welcom">
                    Nếu đã có tài khoản, hãy đăng nhập vào bên dưới nhé!
                </p>
                <a href="/dang-nhap"><button class="signin">Đăng nhập</button></a>
            </div>
        </div>
    </div>

    <div class="form-container sign-up-container">
        <form method="post" action="@Url.Action("DangKy", "User")" class="form-container">
            @Html.AntiForgeryToken()
            <p class="signup">Đăng ký tài khoản</p>

            <div class="form-sign-up">
                <i class="fas fa-user"></i>
                @Html.TextBoxFor(m => m.HoTen, "", new { @class = "form-control form-input", @placeholder = "Nhập họ và tên" })
                @Html.ValidationMessageFor(m => m.HoTen, "", new { @class = "badge badge-danger" })

            </div>

            <div class="form-sign-up">
                <i class="fas fa-envelope"></i>
                @Html.TextBoxFor(m => m.Email, "", new { @class = "form-control form-input", @placeholder = "Nhập Email" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "badge badge-danger" })
                @if (ViewBag.error != null)
                {
                    <span class="badge badge-danger">@ViewBag.error</span>
                }
            </div>

            <div class="form-sign-up">
                <i class="fas fa-key"></i>
                @Html.PasswordFor(m => m.Password, new { @class = "form-control form-input", @placeholder = "Nhập mật khẩu" })
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "badge badge-danger" })
                <a href="#" class="show-btn"><i class="fas fa-eye"></i></a>
            </div>

            <div class="form-sign-up">
                <i class="fas fa-key"></i>
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control form-input", @placeholder = "Xác nhận lại mật khẩu" })
                @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "badge badge-danger" })
             
                <a href="#" class="show-btn"><i class="fas fa-eye"></i></a>
            </div>

            <button class="signup">Đăng ký</button>
        </form>
    </div>
</div>

<footer>
    <p><b>Morii Coffee</b> - <i>Nơi lưu giữ những kỉ niệm</i></p>
</footer>