@{
    var err = ViewBag.err;
}



@using (Html.BeginForm())
{

    @Html.AntiForgeryToken()

    <div class="form-horizontal">

        <div class="login-wrap">
            <div class="login-html">
                <a style="display: flex; justify-content: center; align-items: center; margin-bottom:20px;">
                    <img style="height:40px;" src="~/Assets/Images/LogoMorii1.png" />
                </a>
                <h1 class="titleDangKy">Đăng ký tài khoản Morii</h1>
                <p class="descDangKy"></p>
                <div class="login-form">
                    <div class="sign-up-htm">
                        <div class="group">
                            <input id="HoTen" name="HoTen" type="text" class="input" placeholder="Nhập Họ Tên Của Bạn">
                        </div>
                        <div class="group">
                            <input id="Email" name="Email" type="text" class="input" placeholder="Nhập Email Của Bạn">
                        </div>
                        <div class="group">
                            <input id="Password" name="Password" type="password" class="input" data-type="password" placeholder="Nhập Mật Khẩu Của Bạn">
                        </div>
                        <div class="group">
                            <input id="ConfirmPassword" name="ConfirmPassword" type="password" class="input" data-type="password" placeholder="Xác Nhận Mật Khẩu Của Bạn">
                        </div>

                        <div class="group" style="max-width: 450px;">
                            <div class="" style="color: #dc3545 !important" role="alert">@err</div>
                        </div>


                        <div class="group">
                            <button id="buttonDangKy" @*onmouseenter="onMouseOverDangKy()"*@ value="DangKy" type="submit" class="button">ĐĂNG KÝ</button>
                        </div>
                        <div class="hr"></div>
                        <div class="social-login">
                            <a href="~/User/LoginFacebook" class="fb btn-social" id="signUpWithFacebook">
                                <i class="fa fa-facebook fa-fw"></i> Tiếp tục với Facebook
                            </a>
                            <a href="#" class="google btn-social" id="signUpWithGoogle">
                                <i class="fa fa-google fa-fw">
                                </i> Tiếp tục với Google+
                            </a>
                        </div>
                        <div class="foot-lnk">
                            <h2 style="font-size:16px; line-height:20px; margin:0;">
                                Đã có tài khoản?
                                <span>
                                    <a href="/dang-nhap" id="dangNhapClick">
                                        Đăng Nhập
                                    </a>
                                </span>
                            </h2>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    </div>
}



<style>
    body {
        color: #6a6f8c;
        background: #c8c8c8;
        font: 600 16px/18px;
        font-family: 'Montserrat';
        font-style: normal;
        display: flex;
        justify-content: center;
        align-items: center;
        margin: 0;
        height: 100%;
